{
  "name": "republia-times",
  "version": "0.2.0",
  "description": "A port of the flash game Republia Times to the web.",
  "author": "Brandon Johnson <bjohn465+github@gmail.com>",
  "license": "ISC",
  "private": true,
  "type": "module",
  "imports": {
    "#app/*": "./app/*",
    "#tests/*": "./tests/*"
  },
  "scripts": {
    "prebuild": "npm run i18n:extract",
    "build": "tsc && vite build",
    "dev": "vite",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "prepreview": "npm run build",
    "preview": "vite preview",
    "i18n:extract": "lingui extract",
    "setup": "npm run build && playwright install",
    "test:e2e": "npm run test:e2e:dev --silent",
    "test:e2e:dev": "playwright test --ui",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:install": "npx playwright install --with-deps chromium",
    "typecheck": "tsc",
    "validate": "run-p format:check lint typecheck test:e2e:run"
  },
  "eslintIgnore": [
    "/node_modules",
    "/dist",
    "/playwright-report"
  ],
  "dependencies": {
    "@lingui/core": "^5.1.2",
    "@lingui/detect-locale": "^5.1.2",
    "@lingui/react": "^5.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.0"
  },
  "devDependencies": {
    "@epic-web/config": "^1.16.4",
    "@lingui/babel-plugin-lingui-macro": "^5.1.2",
    "@lingui/cli": "^5.1.2",
    "@lingui/vite-plugin": "^5.1.2",
    "@playwright/test": "^1.49.1",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-plugin-lingui": "^0.8.4",
    "eslint-plugin-react-refresh": "^0.4.16",
    "npm-run-all": "^4.1.5",
    "prettier": "3.4.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5"
  },
  "engines": {
    "node": ">=22.12.0 <23",
    "npm": ">=10.9.0 <11"
  }
}
