{
  "name": "republia-times",
  "version": "0.3.0",
  "description": "A port of the flash game Republia Times to the web.",
  "author": "Brandon Johnson <bjohn465+github@gmail.com>",
  "license": "ISC",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "docker": "docker compose run --rm --service-ports dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --max-warnings 0",
    "preview": "vite preview",
    "test": "npm run test:browser:run",
    "test:browser": "vitest --browser.headless",
    "test:browser:install": "npx playwright install --with-deps chromium",
    "test:browser:run": "npm run test:browser -- --run",
    "test:browser:ui": "vitest",
    "typecheck": "tsc --noEmit",
    "validate": "run-s format:check lint typecheck test:browser:run"
  },
  "eslintIgnore": [
    "/node_modules",
    "/public/app"
  ],
  "devDependencies": {
    "@epic-web/config": "^1.21.3",
    "@vitest/browser": "^3.2.4",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.55.1",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "vite": "npm:rolldown-vite@7.1.13"
  },
  "engines": {
    "node": ">=24.9.0 <25",
    "npm": ">=11.6.0 <12"
  }
}
