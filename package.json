{
  "name": "republia-times",
  "version": "0.2.0",
  "description": "A port of the flash game Republia Times to the web.",
  "author": "Brandon Johnson <bjohn465+github@gmail.com>",
  "license": "ISC",
  "private": true,
  "type": "module",
  "imports": {
    "#app/*": "./app/*",
    "#tests/*": "./tests/*"
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "format": "prettier --write .",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "prepreview": "npm run build",
    "preview": "vite preview",
    "setup": "npm run build && playwright install",
    "test:e2e": "npm run test:e2e:dev --silent",
    "test:e2e:dev": "playwright test --ui",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:install": "npx playwright install --with-deps chromium",
    "typecheck": "tsc",
    "validate": "run-p lint typecheck test:e2e:run"
  },
  "eslintIgnore": [
    "/node_modules",
    "/dist",
    "/playwright-report"
  ],
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.25.1"
  },
  "devDependencies": {
    "@epic-web/config": "^1.12.0",
    "@playwright/test": "^1.45.2",
    "@types/eslint": "^8.56.10",
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.3",
    "typescript": "^5.5.3",
    "vite": "^5.3.3"
  },
  "engines": {
    "node": ">=20.15.1",
    "npm": ">=10.7.0"
  },
  "prettier": "@epic-web/config/prettier"
}
