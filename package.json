{
  "name": "republia-times",
  "version": "0.3.0",
  "description": "A port of the flash game Republia Times to the web.",
  "author": "Brandon Johnson <bjohn465+github@gmail.com>",
  "license": "ISC",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "run-s build:clean build:code",
    "build:clean": "tsc --build --clean",
    "build:code": "tsc --project tsconfig.build.json",
    "dev": "run-p --race watch serve:dev",
    "docker": "docker compose run --rm --service-ports dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --max-warnings 0",
    "serve:dev": "wrangler pages dev",
    "test": "npm run test:browser:run",
    "test:browser": "vitest --browser.headless",
    "test:browser:install": "npx playwright install --with-deps chromium",
    "test:browser:run": "npm run test:browser -- --run",
    "test:browser:ui": "vitest",
    "typecheck": "tsc --noEmit",
    "validate": "run-s format:check lint typecheck test:browser:run",
    "watch": "npm run build:code -- --watch"
  },
  "eslintIgnore": [
    "/node_modules",
    "/public/app"
  ],
  "devDependencies": {
    "@epic-web/config": "^1.21.3",
    "@vitest/browser": "^4.0.15",
    "@vitest/browser-playwright": "^4.0.15",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.57.0",
    "prettier": "3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "wrangler": "^4.51.0"
  },
  "engines": {
    "node": ">=24.11.1 <25",
    "npm": ">=11.6.2 <12"
  }
}
