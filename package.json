{
  "name": "republia-times",
  "version": "0.2.0",
  "description": "A port of the flash game Republia Times to the web.",
  "author": "Brandon Johnson <bjohn465+github@gmail.com>",
  "license": "ISC",
  "private": true,
  "type": "module",
  "imports": {
    "#app/*": "./app/*",
    "#tests/*": "./tests/*"
  },
  "scripts": {
    "prebuild": "npm run i18n:extract",
    "build": "tsc && vite build",
    "dev": "vite",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate-id:news-feed-item": "tsx scripts/generate-news-feed-id.ts",
    "lint": "eslint . --max-warnings 0",
    "prepreview": "npm run build",
    "preview": "vite preview",
    "i18n:extract": "lingui extract",
    "setup": "npm run build && playwright install",
    "test:e2e": "npm run test:e2e:dev --silent",
    "test:e2e:dev": "playwright test --ui",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:install": "npx playwright install --with-deps chromium",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "typecheck": "tsc --project . --project ./tests",
    "validate": "run-p format:check lint typecheck test:unit:coverage test:e2e:run"
  },
  "eslintIgnore": [
    "/node_modules",
    "/dist",
    "/playwright-report"
  ],
  "dependencies": {
    "@epic-web/invariant": "^1.0.0",
    "@lingui/core": "^5.1.2",
    "@lingui/detect-locale": "^5.1.2",
    "@lingui/message-utils": "^5.1.2",
    "@lingui/react": "^5.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.1.4",
    "valibot": "^1.0.0-beta.14"
  },
  "devDependencies": {
    "@epic-web/config": "^1.16.5",
    "@lingui/babel-plugin-lingui-macro": "^5.1.2",
    "@lingui/cli": "^5.1.2",
    "@lingui/vite-plugin": "^5.1.2",
    "@playwright/test": "^1.50.0",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.0.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.19.0",
    "eslint-plugin-lingui": "^0.9.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "nanoid": "^5.0.9",
    "npm-run-all": "^4.1.5",
    "prettier": "3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-minify": "^2.1.0",
    "vitest": "^3.0.4"
  },
  "engines": {
    "node": ">=22.13.1 <23",
    "npm": ">=10.9.2 <11"
  }
}
