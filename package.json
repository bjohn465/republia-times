{
  "name": "republia-times",
  "version": "0.3.0",
  "description": "A port of the flash game Republia Times to the web.",
  "author": "Brandon Johnson <bjohn465+github@gmail.com>",
  "license": "ISC",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "run-p --race watch serve:dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --max-warnings 0",
    "serve:dev": "wrangler pages dev",
    "typecheck": "tsc --noEmit",
    "validate": "run-s format:check lint typecheck",
    "watch": "tsc --watch"
  },
  "eslintIgnore": [
    "/node_modules",
    "/public/app"
  ],
  "devDependencies": {
    "@epic-web/config": "^1.21.3",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "wrangler": "^4.32.0"
  },
  "engines": {
    "node": ">=24.6.0 <25",
    "npm": ">=11.4.2 <12"
  }
}
